<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:ems="10"
            android:id="@+id/tvDeviceName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent" android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:background="@color/colorPrimaryBgDark" android:gravity="left|center_vertical"
            android:paddingLeft="20dp" />

    <FrameLayout
            android:id="@+id/flFragContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDeviceName" app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>