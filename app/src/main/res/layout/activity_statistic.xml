<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <TextView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:ems="10"
            android:id="@+id/tvDeviceName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent" android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:background="@color/colorPrimaryBgDark" android:gravity="left|center_vertical"
            android:paddingLeft="20dp"/>
    <Button
            android:text="@string/str_statistic_day"
            android:layout_width="122dp"
            android:layout_height="20dp"
            android:id="@+id/btDay" android:layout_marginTop="8dp"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@+id/tvDeviceName" app:layout_constraintEnd_toStartOf="@+id/btMonth"
            android:layout_marginEnd="46dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" android:textSize="10sp" android:background="@drawable/img_bt_nor"
            android:textColor="@android:color/white"/>
    <Button
            android:text="@string/str_statistic_month"
            android:layout_width="122dp"
            android:layout_height="20dp"
            android:id="@+id/btMonth" android:layout_marginTop="8dp"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@+id/tvDeviceName" android:layout_marginStart="40dp"
            app:layout_constraintStart_toEndOf="@+id/btDay" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" android:textSize="10sp" android:background="@drawable/img_bt_nor"
            android:textColor="@android:color/white"/>

    <FrameLayout
            android:id="@+id/flFragContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btDay"/>

</android.support.constraint.ConstraintLayout>