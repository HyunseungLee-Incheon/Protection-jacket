<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorE01F56">

    <ImageView
            android:id="@+id/iv_loading_text"
            android:layout_width="127dp"
            android:layout_height="40dp"
            android:layout_marginTop="294dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/loading_loading_text" />

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="127dp"
            android:layout_height="11dp"
            android:layout_marginTop="27dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_loading_text"
            app:srcCompat="@drawable/loading_guage_bar" />

</android.support.constraint.ConstraintLayout>